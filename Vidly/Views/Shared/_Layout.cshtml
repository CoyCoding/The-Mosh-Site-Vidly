<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
    @Html.Partial("_NavBar")
    <body>
        <header class="masthead" style="min-height: 532px; background-image: url(../../Content/Img/palms.png)">
            <div class="overlay"></div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <div  style="text-align: center;  padding: 200px 0 150px; color: rgba(255, 255, 255, 0.98);">
                            <h1 class="site-heading"style="color: rgba(255, 255, 255, 0.98);">Palm Theaters</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div >
            @RenderBody();
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Vidly</p>
            </footer>
        </div>


        @Scripts.Render("~/bundles/lib")
        @RenderSection("scripts", required: false)
    </body>
</html>


