@model  Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li><b>Genre : </b>@Model.Genre.Name</li>
    <li><b>Release Date : </b>@Model.ReleaseDate.ToShortDateString()</li>
    <li><b>Date Added : </b>@Model.DateAdded.ToShortDateString()</li>
    <li><b>Quantity in Stock : </b>@Model.QuantityInStock</li>

</ul>

