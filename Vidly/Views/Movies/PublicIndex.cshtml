@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
        <table id="movie-table" class="table table-bordered table-hover" style="width: 100%" >
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                    <th style="text-align: center; width: 20%; ">Quantity In Stock</th>
                </tr>
            </thead>
            <tbody  class="table-sm">

            </tbody>
        </table>
 


@section scripts
{
    <script>
        //
        // This script takes the current row's movie asks for comfirmation on deletion
        // If deleted adds an animation class to the row and removes it after a delay.
        //
        $(document).ready(function () {
           var table = $("#movie-table").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",

                        //
                        //render: function (data, type, movie) {
                        //    return "<a href='/movies/edit/" + movie.id + "'>" + data + "</a>";
                        //}
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "quantityInStock",
                        render: function (data, type, movie) {
                            return "<div style='text-align: center'>" + data + "</div>";
                        }
                    }
                ]
            });

        });
    </script>
}

