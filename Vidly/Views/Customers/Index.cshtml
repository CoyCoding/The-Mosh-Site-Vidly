@model  IEnumerable<Vidly.Models.Customer>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@{ 
    var headerText = "Customers";
    if (!Model.Any())
    {
        headerText = "No Customers";
    }
    else
    {
        <table id="customer-table" class="table table-bordered table-hover">
            <thead>
                <tr >
                    <th>@headerText</th>
                    @if (headerText == "Customers")
                    {
                        <th>Membership Type</th>
                        <th class="text-center">Delete</th>
                    }
                </tr>
            </thead>
            <tbody>
               @foreach (var customer in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customer.Name, "Edit", "Customers", new { id = customer.Id }, null)</td>
                        <td>@customer.MembershipType.Name</td>   
                        <td class="text-center">
                            <button data-customer-name="@customer.Name" data-customer-id="@customer.Id" class="btn-link jq-delete">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@section scripts
{
    <script>
        //
        // This script takes the current row's customer asks for comfirmation on deletion
        // If deleted adds an animation class to the row and removes it after a delay.
        //
        $(document).ready(function () {
            $("#customer-table").DataTable();

            $("#customer-table").on("click", ".jq-delete", function () {
                var customerName = $(this).attr("data-customer-name");
                var customerId = $(this).attr("data-customer-id");
                var button = $(this);

                bootbox.confirm("Confirm deletion of " + customerName, function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + customerId,

                            //Leaving delete blank to continue testing

                            method: "",
                            success: function () {
                                setTimeout(function () {
                                    button.parents("tr").remove();
                                }, 1400);
                                button.parents("tr").addClass("delete-row");
                            }
                        });
                    }
                });
            });
        });
    </script>
}

